#source ./integration-test-setup
export APPLICATION_ADAPTERS_MONGODB_DATABASE_HOST=127.0.0.1
export APPLICATION_ADAPTERS_MONGODB_DATABASE_PORT=27017
export APPLICATION_ADAPTERS_MONGODB_DATABASE_USER=test
export APPLICATION_ADAPTERS_MONGODB_DATABASE_PASSWORD=test
export APPLICATION_ADAPTERS_MONGODB_DATABASE_NAME=test

docker run --rm -d -e MONGO_INITDB_ROOT_USERNAME=test -e MONGO_INITDB_ROOT_PASSWORD=test -e MONGO_INITDB_DATABASE=test --name some-mongo -p 27017:27017 mongo
