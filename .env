CORE_REGISTRIES_ENDPOINTS_DATABASE_NAME=endpointregistry
CORE_REGISTRIES_ENDPOINTS_DATABASE_PORT=5432
CORE_REGISTRIES_ENDPOINTS_DATABASE_USER=postgres
